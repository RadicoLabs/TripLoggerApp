<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:padding="20dp">

    <TextView
        android:id="@+id/tv_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Log A New Trip"
        android:padding="5dp"
        />

    <!--title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_fragment_log_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/et_fragment_log_title_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            />
    </LinearLayout>

    <!--date-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_fragment_log_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date: " />

        <Button android:id="@+id/btn_fragment_log_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />


    </LinearLayout>

    <!--tripType-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_fragment_log_tripType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trip Type: "/>

        <Spinner
            android:id="@+id/tv_fragment_log_tripType_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            />

    </LinearLayout>

    <!--Destination-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_fragment_log_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Destination: " />

        <EditText
            android:id="@+id/et_fragment_log_destination_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />


    </LinearLayout>

    <!--Duration-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_fragment_log_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Duration: "/>

        <EditText
            android:id="@+id/et_fragment_log_duration_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <!--Comment-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="3" >

        <TextView
            android:id="@+id/tv_fragment_log_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comment: "/>

        <EditText
            android:id="@+id/et_fragment_log_comment_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <!--Save/Cancelt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="4" >

        <Button android:id="@+id/btn_fragment_log_date_SAVE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="SAVE"/>

        <Button android:id="@+id/btn_fragment_log_CANCEL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="CANCEL"/>

    </LinearLayout>

</LinearLayout>